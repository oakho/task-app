{{#if isEditing}}
  {{task-form content=content autofocus=true submit="didSubmitTask" cancel="didCancelTask"}}
{{else}}
  <div class="task-content">
    <h3 class="task-label" {{action "editStart" on="click"}}>{{content.label}}</h3>
  </div>
  <footer class="task-footer">
    {{task-date createdAt=content.createdAt updatedAt=content.updatedAt}}
  </footer>
{{/if}}
